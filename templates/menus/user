    </li>
   [% END %]
   <li class="has-dropdown">
     <a href="[% make_uri_info('user', global.request.user.user_id) %]">[% global.request.user.login %]</a>
     <ul class="dropdown">
      <li><a href="[% make_uri('main') %]">{{Edit profile}}</a></li>
      <li><a href="[% make_uri('logout') %]">{{Logout}}</a></li>
     </ul>
   </li>
[% ELSE %]

